<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="0.0.0.1" author="DianaAs" failOnError="true">
    <comment>Create note table</comment>
    <createTable tableName="note">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="title" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="note" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="bigint">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <comment>Create user table</comment>
    <createTable tableName="user">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="email" type="varchar(1024)">
        <constraints nullable="false"/>
      </column>
      <column name="password" type="varchar(512)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="bigint">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="user_note">
      <column name="user_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="note_id" type="bigint">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addPrimaryKey tableName="user_note"
                   columnNames="user_id, note_id"
                   constraintName="pk_user_note"/>
    <addForeignKeyConstraint baseTableName="user_note"
                             baseColumnNames="user_id"
                             constraintName="user-note_user_id_fk"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
    <addForeignKeyConstraint baseTableName="user_note"
                             baseColumnNames="note_id"
                             constraintName="user_note_note_id_fk"
                             referencedTableName="note"
                             referencedColumnNames="id"/>

    <createIndex tableName="users" indexName="user_email_idx">
      <column name="email"/>
    </createIndex>

    <rollback>
      <dropIndex tableName="users" indexName="user_email_idx"/>
      <dropTable tableName="notes"/>
      <dropTable tableName="users"/>
    </rollback>
  </changeSet>
</databaseChangeLog>
